<Window x:Class="LibraryProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="900"
        MinHeight="650" MinWidth="900" MaxHeight="1080" MaxWidth="1920">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="80*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Rectangle Grid.Row="0" Fill="{StaticResource SecondColor}"></Rectangle>
        <Rectangle Grid.Row="1" Fill="{StaticResource MainColor}"></Rectangle>
        <Rectangle Grid.Row="2" Fill="{StaticResource SecondColor}"></Rectangle>
        <Image HorizontalAlignment="Left" Source="Resources/images/logout.png"/>
        <TextBox x:Name="SearchBox" Style="{StaticResource SearchBox }"></TextBox>
        <TextBlock Style="{StaticResource PlaceholderStyle}" Tag="{Binding ElementName=SearchBox}" Text="Введите название книги">
             <Image Style="{StaticResource SearchIcon}"/>
        </TextBlock>
        <Frame Grid.Row="1" NavigationUIVisibility="Hidden" x:Name="MainFrame"/>
    </Grid>
</Window>
