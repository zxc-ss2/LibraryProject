<Page x:Class="LibraryProject.Views.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibraryProject.Views"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="800"
      Title="RegistrationPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Grid.Column="0" Width="420" Height="550" Fill="{StaticResource MainColor}"></Rectangle>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
            <DockPanel HorizontalAlignment="Center">
                <Button Style="{StaticResource GreenBtn}" BorderThickness="0">Sign Up</Button>
                <Button Style="{StaticResource GrayBtn}" BorderThickness="0" Click="LoginBtnClick">Log In</Button>
            </DockPanel>

            <TextBlock Style="{StaticResource OfferText}">Sigh Up for Free</TextBlock>

            <TextBlock Style="{StaticResource LabelText}" Margin="0 20 0 0">First Name</TextBlock>
            <TextBox x:Name="FirstNameInput" Style="{StaticResource InputBox}"></TextBox>

            <TextBlock Style="{StaticResource LabelText}">Last Name</TextBlock>
            <TextBox x:Name="LastNameInput" Style="{StaticResource InputBox}"></TextBox>

            <TextBlock Style="{StaticResource LabelText}">Email</TextBlock>
            <TextBox x:Name="EmailInput" Style="{StaticResource InputBox}"></TextBox>

            <TextBlock Style="{StaticResource LabelText}">Set a password</TextBlock>
            <PasswordBox x:Name="PasswordInput"  Style="{StaticResource Password}"></PasswordBox>

            <Button  Style="{StaticResource StartBtn}">Get started</Button>
        </StackPanel >
    </Grid>
</Page>
